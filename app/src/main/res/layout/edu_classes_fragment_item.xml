<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/background_main"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:background="@color/bottom_nav_active_text" />

        <ImageView
            android:id="@+id/iv_lesson_dot_active"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/circle_green" />

        <ImageView
            android:id="@+id/iv_lesson_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/circle_white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            style="@style/text_bottom_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="8:00 - 8:45" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:backgroundTint="@color/cardview_background"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="35dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lesson_logo_background"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_lesson_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/history" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/tv_lesson_name"
                        style="@style/text_bottom_style"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="history" />

                    <TextView
                        android:id="@+id/tv_lesson_interval"
                        style="@style/text_bottom_style"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="8:00 - 8:45"
                        android:textColor="@color/lesson_logo_background" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/skype_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/open_in"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>