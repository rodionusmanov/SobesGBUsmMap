<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_time_digits_style">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">@dimen/time_units_margin_horizontal</item>
    </style>

    <style name="text_time_digits_style">
        <item name="android:textSize">@dimen/time_digits_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/calibri</item>
    </style>

    <style name="text_header_style">
        <item name="android:textSize">@dimen/time_header_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:layout_marginBottom">@dimen/time_header_bottom_margin</item>
    </style>

    <style name="text_bottom_style">
        <item name="android:textSize">@dimen/time_bottom_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:gravity">center|top</item>
        <item name="android:fontFamily">@font/calibri</item>
    </style>

    <dimen name="time_digits_text_size">30sp</dimen>
    <dimen name="time_header_text_size">28sp</dimen>
    <dimen name="time_bottom_text_size">18sp</dimen>
</resources>